<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context=".MainActivity"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_main_title"
                android:background="#ff2a24ff"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:textSize="20dip"
                android:textColor="#ffffffff"
                android:text="设置向导4"
                />



        <TextView
                android:text="设置完成："
                style="@style/text_setup1_style"
                android:textSize="20dip"
                />

        <TextView
                style="@style/text_setup1_style"
                android:text="设置基本完成，是否开启防盗保护"
                />





        <com.dream.net.ui.Setup4ItemView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </com.dream.net.ui.Setup4ItemView>


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="140dip"
                android:layout_gravity="center"
                android:layout_marginTop="30dip"
                android:src="@drawable/setup4_cartoon_char"
                />

    </LinearLayout>


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">



        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online"
                />

    </LinearLayout>


    <Button
            android:id="@+id/bt_setup4_next"
            style="@style/button_setup_style"
            android:layout_alignParentRight="true"
            android:text="下一步"
            />

    <Button
            android:id="@+id/bt_setup4_previous"
            style="@style/button_setup_style"
            android:layout_alignParentLeft="true"
            android:text="上一步"
            />


</RelativeLayout>
