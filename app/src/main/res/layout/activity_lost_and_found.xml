<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <TextView
            android:id="@+id/tv_main_title"
            android:background="#ff2a24ff"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textSize="20dip"
            android:textColor="#ffffffff"
            android:text="手机防盗"
            />


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:text="安全号码"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:text="-------->"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:text="1234"
                />

        <View
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="40dip"
                android:layout_height="0.2dip"
                android:background="#88000000"
                />


    </RelativeLayout>


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:textSize="20dip"
                android:text="防盗保护是否开启"
                />


        <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/btn_check_buttonless_on"
                />

        <View
                android:layout_width="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="40dip"
                android:layout_height="0.2dip"
                android:background="#88000000"
                />


    </RelativeLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:textSize="25dip"
            android:text="功能简介:"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="35dip"
            android:textSize="20dip"
            android:text="GPS追踪#*loaction*#"
            android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="35dip"
            android:textSize="20dip"
            android:text="播放报警音乐#*alarm*#"
            android:drawableLeft="@android:drawable/star_big_on"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="35dip"
            android:textSize="20dip"
            android:text="远程删除数据#*wipedata*#"
            android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="35dip"
            android:textSize="20dip"
            android:text="远程锁屏#*lockscreen*#"
            android:drawableLeft="@android:drawable/star_big_on"/>






    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center">
        <Button
                android:id="@+id/bt_lost_and_found_reGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/button_setup_style"
                android:text="重新打开设置向导"
                />
    </RelativeLayout>


</LinearLayout>